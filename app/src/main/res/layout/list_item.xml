<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:layout_marginRight="2dp"
        android:id="@+id/item_image_tv"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <LinearLayout
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="3"
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            tools:text="Caramel Chocolate Cheesecake" />

        <TextView
            android:maxLines="4"
            android:textSize="15sp"
            android:id="@+id/item_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            tools:text="Caramel Cheesecake Ice Cream with Graham Cracker-Covered Cheesecake Truffles Chocolate Cookie Swirls" />

    </LinearLayout>

</LinearLayout>